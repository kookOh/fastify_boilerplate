{
  "name": "mannergg",
  "version": "0.0.1",
  "description": "manner.gg server based on fastify & prisma ",
  "exports": "./dist/index.js",
  "scripts": {
    "clean": "rimraf {dist,release}/*",
    "dev": "pnpm run clean && NODE_ENV=development tsc-watch --onSuccess 'node dist/server.js' | pino-colada",
    "build": "pnpm run clean && NODE_ENV=production tsc",
    "start": "pnpm run build && pm2 reload server && pm2 log",
    "unit": "pnpm run build && mocha dist/**/*.spec.js",
    "unit:w": "pnpm run clean && NODE_ENV=development tsc-watch --onSuccess 'mocha dist/**/*.spec.js'",
    "integration": "npx prisma migrate reset --force && pnpm run build && mocha dist/**/*.ispec.js",
    "db:push": "NODE_ENV=development npx prisma db push",
    "setup:integration": "docker compose up -d",
    "stop:integration": "docker compose down",
    "lint": "eslint --fix --ext .ts .",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "author": "seungkook Oh",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@fastify/autoload": "5.8.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "8.0.0",
    "@fastify/secure-session": "^7.1.0",
    "@fastify/sensible": "5.5.0",
    "@fastify/static": "^7.0.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@lukeed/ms": "^2.0.2",
    "@prisma/client": "^5.9.1",
    "@types/nodemailer": "^6.4.14",
    "ajv": "^8.12.0",
    "axios": "^1.6.7",
    "bcrypt": "^5.1.0",
    "crypto-random-string": "^5.0.0",
    "env-schema": "^5.2.1",
    "esbuild": "^0.20.1",
    "esbuild-plugin-copy": "^2.1.1",
    "fastify": "^4.26.0",
    "fastify-blipp": "^4.0.0",
    "fastify-multer": "^2.0.3",
    "fastify-plugin": "^4.5.1",
    "http-errors": "^2.0.0",
    "is-docker": "^3.0.0",
    "jwks-rsa": "^3.1.0",
    "nodemailer": "^6.7.3",
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.8",
    "@types/http-errors": "^1.8.2",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.16",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "chai": "^4.3.6",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.10",
    "json-schema-to-ts": "^3.0.0",
    "lint-staged": "^15.2.2",
    "mocha": "^10.2.0",
    "pino-colada": "^2.2.2",
    "prettier": "3.2.5",
    "prisma": "^5.9.1",
    "rimraf": "^5.0.5",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.3.3"
  },
  "node": ">=16.0.0",
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "*.ts": []
  }
}
